ts
Copy
Edit
{
  _id,
  authorId: ObjectId,
  title,
  body,
  tags: [String],
  createdAt: Date,
  updatedAt: Date,
  votes: [{ userId, value: 1 | -1 }],
  viewCount: Number,
  acceptedAnswerId: ObjectId | null
}
